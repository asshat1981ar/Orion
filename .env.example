# Orion Platform Configuration Example
# Copy this file to .env and update with your actual values

# Core Services
ORCHESTRATOR_PORT=3001
FRONTEND_PORT=3000
MCP_REGISTRY_PORT=4000
GHOST_GRAPH_PORT=5000
AGENT_FORGE_PORT=5001

# Database Configuration  
NEO4J_HTTP_PORT=7475
NEO4J_BOLT_PORT=7688
NEO4J_URI=bolt://localhost:7688
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Redis Configuration
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# MCP Services
CLAUDE_MCP_PORT=4040
DEEPSEEK_MCP_PORT=8001

# AI API Keys (replace with your actual keys)
ANTHROPIC_API_KEY=your-anthropic-key-here
DEEPSEEK_API_KEY=your-deepseek-key-here

# Development Settings
NODE_ENV=development
LOG_LEVEL=debug

# Ghost Graph Configuration
GHOST_GRAPH_COMPRESSION_LEVEL=5
GHOST_GRAPH_RETENTION_DAYS=30

# Agent Auto-Forge Configuration
AUTO_FORGE_MAX_CONCURRENT=10
AUTO_FORGE_DOCKER_TIMEOUT=300